include ../mixins/all
.grid-fluid
  if isCountryPage
    .country-header
      .country-current
        +img('{{header.country.title}}','{{header.country.img}}').flag
  .group
    a.logo(href='{{header.logo.url}}', title='{{header.title}}')
      span.icon.icon-logo
      +img('DigitasLBi', '../images/digitas.svg').text
    a.connected-logo(href='{{header.logo.url}}', title='{{header.title}}')
      span.icon.icon-connected
      span.text
        | {{header.logo.title}}
  button(type='button', data-menu).navbar-toggle
    span
    span
    span
    span
  .nav-collapse(data-scroll-top)
    ul.main-nav
      | {{#each header.mainNav}}
      li
        +link('{{title}}', '{{id}}')
        | {{#if subMenu}}
        ul.submenu
          | {{#each subMenu}}
          li: +link('{{title}}', '{{href}}')
          | {{/each}}
        | {{/if}}
      | {{/each}}
